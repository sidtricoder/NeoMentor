# Backend Environment Configuration for Production
# Copy this file to .env and update with your actual values

# Google Cloud and Vertex AI Configuration
GOOGLE_GENAI_USE_VERTEXAI=TRUE
GOOGLE_CLOUD_PROJECT=your-google-cloud-project-id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Firebase Configuration
FIREBASE_SERVICE_ACCOUNT_KEY=service-account-key.json
FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app

# API Configuration
API_URL=https://your-backend-url.run.app
ALLOWED_ORIGINS=https://your-frontend-url.run.app,http://localhost:3000,http://127.0.0.1:3000

# Optional: Other configurations
LOG_LEVEL=INFO
MAX_FILE_SIZE=500MB
UPLOAD_TIMEOUT=3000
